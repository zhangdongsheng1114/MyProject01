<?xml version="1.0" encoding="utf-8"?>
<ListView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_Read"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:text="读书"
            android:textColor="#000000"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/imageView_Search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:baselineAlignBottom="true"
            android:src="@mipmap/search" />

        <ImageButton
            android:id="@+id/imageView_Add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:baselineAlignBottom="true"
            android:src="@mipmap/add" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearLayout_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:padding="10dp"
                    android:src="@drawable/timg" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:padding="10dp"
                    android:src="@drawable/timg01" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:padding="10dp"
                    android:src="@drawable/timg02" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:padding="10dp"
                    android:src="@drawable/timg03" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:padding="10dp"
                    android:src="@drawable/timg04" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:padding="10dp"
                    android:src="@drawable/timg05" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:padding="10dp"
                    android:src="@drawable/timg06" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:padding="10dp"
                    android:src="@drawable/timg07" />
            </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/menu_layout"
            layout="@layout/menu_layout"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_gravity="right"
            android:visibility="invisible" />
    </FrameLayout>
</ListView>